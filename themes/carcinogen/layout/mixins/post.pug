//- Post Page
mixin post(item)
    .post
        article.post-block
            h1.post-title
                +postTitle(item.title)
            // +categories(item.categories)
            +tags(item.tags)
            +postInfo(item)
            .post-content
                != item.content

mixin relatedPosts()
    div
        != list_related_posts()

//- Page Title for archive, tags, categories, etc --> used with postList()
mixin collectionPageTitle()
    - var pageType = page.path.substring(0, page.path.indexOf("/"));
    - var title = "";
    - var subTitle = "";
    - if (pageType === "archives") {
        - title = "Posts"
    - }
    - if (pageType === "tags") {
        - subTitle = page.path.substring(pageType.length + 1);
        - subTitle = subTitle.substring(0, subTitle.indexOf("/"));
        - title = "#" + subTitle;
    - }
    

    h1.collection-title #{title}
    if pageType !== "archives"
        div.cursor.alt-color(onclick="javascript:window.location.pathname = '/archives';") Back to all posts