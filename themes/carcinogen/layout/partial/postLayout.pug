doctype
html(lang=config.language)
    head
        include head.pug
    body
        include postscripts.pug
        .wrap#barba-wrapper
            header
                h1.branding
                    a(onclick="javascript:window.location.href = '/';", title=config.title)
                        if theme.logo
                            img.logo-image(src=url_for(theme.logo), alt='logo')
                        else
                            = config.title
                include nav.pug
            .barba-flex
                block sidenav
                .barba-container
                    block intro
                    main.container
                        block container
                    footer
                        block pagination
                        block copyright
                        include comment.pug
        include scripts.pug
