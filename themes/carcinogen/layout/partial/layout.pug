doctype
html(lang=config.language)
    head
        include head.pug
    body
        .wrap#barba-wrapper
            header
                h1.branding
                    a(href=url_for(), title=config.title)
                        if theme.logo
                            img.logo-image(src=url_for(theme.logo), alt='logo')
                        else
                            = config.title
                include nav.pug
            .barba-flex
                .barba-side
                    a(href="/projects") Projects
                    a(href="/blog") Blog
                    a(href="/music") Music
                .barba-container
                    block intro
                    block front
                    main.container
                        block container
                    footer
                        block pagination
                        block copyright
        include scripts.pug
